<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.sumFont {
			font-weight: bold;
		}
		
		.sumLabel {
			margin-right: 5px;
		}
	</ui:style>
	<g:VerticalPanel>
		<c:CellTable ui:field="table" />
		<g:HorizontalPanel addStyleNames="{style.sumFont}">
			<g:Label ui:field="sumLabel" addStyleNames="{style.sumLabel}" />
			<g:HTML ui:field="sum" />
		</g:HorizontalPanel>
		<c:SimplePager ui:field="pager" />
		<g:Button ui:field="add" />
	</g:VerticalPanel>
</ui:UiBinder> 