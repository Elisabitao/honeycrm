<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:mvp="urn:import:honeycrm.client.mvp.views" xmlns:view="urn:import:honeycrm.client.view">
	<g:FlowPanel addStyleNames="honey_header with_margin" ui:field="panel">
		<g:FlowPanel addStyleNames="honey_header_left">
			<g:Label addStyleNames="header_logo">Honey CRM</g:Label>
			<g:Label addStyleNames="welcome_user" ui:field="welcome" />
			<mvp:LoadView ui:field="loadView" />
		</g:FlowPanel>
		<g:FlowPanel addStyleNames="honey_header_right">
			<g:FlowPanel addStyleNames="honey_search">
				<view:FulltextSearchWidget ui:field="fulltextSearchView" addStyleNames="header_search_input" />
			</g:FlowPanel>
			<g:FlowPanel addStyleNames="header_links">
				<g:Hyperlink addStyleNames="header_link" text="Logout" targetHistoryToken="logout" />
				<g:Hyperlink addStyleNames="header_link" text="Profile" targetHistoryToken="profile" />
				<g:Hyperlink addStyleNames="header_link" text="Help" targetHistoryToken="help" />
			</g:FlowPanel>
			<g:HTML>
				<div class="clear" />
			</g:HTML>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 