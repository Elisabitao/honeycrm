<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.1.0.RC1//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.1.0.RC1/distro-source/core/src/gwt-module.dtd">
<module rename-to="Honey">
	<inherits name="com.google.gwt.user.User" />
	<!-- inherits name="com.google.gwt.i18n.I18N"/ -->
	<inherits name='com.google.gwt.visualization.Visualization' />
	<inherits name='com.google.gwt.user.theme.standard.Standard' />

	<servlet path="/auth" class="honeycrm.server.services.AuthServiceImpl" />
	<servlet path="/config" class="honeycrm.server.services.ConfigServiceImpl" />
	<servlet path="/report" class="honeycrm.server.services.ReportServiceImpl" />
	<servlet path="/read" class="honeycrm.server.services.ReadServiceImpl" />
	<servlet path="/plugin" class="honeycrm.server.services.PluginServiceImpl" />

	<entry-point class='honeycrm.client.Honey' />
	<source path="client" />
	
	<!-- extend-property name="locale" values="en"/>
  	<extend-property name="locale" values="ge"/>
  	<set-property-fallback name="locale" value="en"/-->

	<!-- set-property name="user.agent" value="gecko1_8" / -->
	<extend-configuration-property name="rpc.blacklist" value=".*" />
	<extend-configuration-property name="rpc.blacklist" value="com.google.gwt.user.client.rpc.SerializableException" />
	<extend-configuration-property name="rpc.blacklist" value="+java.lang.long" />
	<extend-configuration-property name="rpc.blacklist" value="+java.lang.String" />
	<extend-configuration-property name="rpc.blacklist" value="+java.lang.int" />
	<extend-configuration-property name="rpc.blacklist" value="+java.lang.long" />
	<extend-configuration-property name="rpc.blacklist" value="+java.lang.double" />
	<extend-configuration-property name="rpc.blacklist" value="+java.lang.boolean" />
	<extend-configuration-property name="rpc.blacklist" value="+java.util.Date" />
	<extend-configuration-property name="rpc.blacklist" value="+java.util.ArrayList" />
	<extend-configuration-property name="rpc.blacklist" value="+java.util.HashMap" />
	<extend-configuration-property name="rpc.blacklist" value="+java.util.HashSet" />
	<extend-configuration-property name="rpc.blacklist" value="+honeycrm.client.*" />
	<extend-configuration-property name="rpc.blacklist" value="+java.lang.Integer" />
	<extend-configuration-property name="rpc.blacklist" value="+java.lang.Long" />
	<extend-configuration-property name="rpc.blacklist" value="+java.lang.Double" />
	<extend-configuration-property name="rpc.blacklist" value="+java.lang.Boolean" />
	<extend-configuration-property name="rpc.blacklist" value="+com.google.gwt.user.client.rpc.*" />
</module>