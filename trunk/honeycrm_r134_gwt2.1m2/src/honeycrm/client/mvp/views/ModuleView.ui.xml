<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:views="urn:import:honeycrm.client.mvp.views">
	<ui:style>
	.splitPanel {
		background: url("/images/content-gradient.png") repeat-x scroll 0 1px transparent;	
	}
	</ui:style>
	
	<g:DockLayoutPanel>
		<g:north size="40">
			<views:ModuleButtonBarView ui:field="moduleButtonBar" />
		</g:north>
		<g:center>
			<g:SplitLayoutPanel addStyleNames="{style.splitPanel}">
				<g:west size="500">
					<g:ScrollPanel>
						<views:ListView ui:field="list" />
					</g:ScrollPanel>
				</g:west>
				<g:center>
					<g:ScrollPanel>
						<views:DetailView ui:field="detail" />
					</g:ScrollPanel>
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 